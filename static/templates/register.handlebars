<!DOCTYPE html>
<html>

{{> _head title="Registration" }}

<body>
    <div class="container grid-lg">
        <div class="col-6 col-mx-auto col-sm-12">
            <div class="card card-top-padding">
                <div class="card-header">
                    <div class="card-title h1">
                        <img src="/images/ascii-pay-logo-wide.svg">
                    </div>
                </div>
                <form method="POST">
                    <input class="form-input" type="hidden" name="username" value="{{account.username}}" />
                    <div class="card-body">
                        <div class="form-group">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-input" type="text" name="username" value="{{account.username}}" readonly />
                        </div>
                        <div class="form-group">
                            <label class="form-label" class="form-label" for="password">Password</label>
                            <input class="form-input" type="password" name="password" autofocus />
                        </div>
                        <div class="form-group">
                            <label class="form-label" class="form-label" for="password2">Repeat password</label>
                            <input class="form-input" type="password" name="password2" />
                        </div>
                    </div>
                    <div class="card-footer">
                        <input class="btn btn-primary" type="submit" value="Register" />
                    </div>
                    <div class="card-footer">
                        {{#if error}}<div class="toast toast-error">Incorrect username or password!</div>{{/if}}
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>