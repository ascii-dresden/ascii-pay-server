<!DOCTYPE html>
<html>

{{> _head title="Overview" }}

<body>
    <div class="container grid-lg">
        {{> _default_navigation active="overview" }}

        <h1>Transaction</h1>

        <div class="columns">
            <div class="column col-4 col-sm-6">
                <div>Amount</div>
                <h3 class="d-block">{{currency transaction.total}}€</h3>
            </div>
            <div class="column col-4 col-sm-6">
                <div>Date</div>
                <h3 class="d-block">{{format_datetime transaction.date}}</h3>
            </div>
        </div>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Amount</th>
                    <th>Unit price</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{product.name}}</td>
                    <td>{{amount}}</td>
                    <td>{{currency product.current_price}}€</td>
                    <td>{{currency current_price}}€</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</body>

</html>