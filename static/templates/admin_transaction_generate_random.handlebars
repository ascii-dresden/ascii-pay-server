<!DOCTYPE html>
<html>

{{> _head title="Generate transactions" }}

<body>
    <div class="container grid-lg">
        <div class="col-6 col-mx-auto col-sm-12">
            <div class="card card-top-padding">
                <div class="card-header">
                    <div class="card-title h1">
                        <img src="/images/ascii-pay-logo-wide.svg">
                    </div>
                </div>
                <form method="POST">
                    <div class="card-body">
                        <div class="form-group">
                            <label class="form-label">Name</label>
                            <input class="form-input" type="text" value="{{account.name}}" readonly>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="from">From</label>
                            <input class="form-input" type="date" name="from" value="{{date.from}}">
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="to">To</label>
                            <input class="form-input" type="date" name="to" value="{{date.to}}">
                        </div>

                        <div class="form-group">
                            <div class="col-3 col-sm-12">
                                <label class="form-label" for="avg_up">Average up</label>
                            </div>
                            <div class="col-9 col-sm-12">
                                <div class="input-group">
                                    <input class="form-input money-input" type="text" name="avg_up" value="20.00" />
                                    <span class="input-group-addon">€</span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-3 col-sm-12">
                                <label class="form-label" for="avg_down">Average down</label>
                            </div>
                            <div class="col-9 col-sm-12">
                                <div class="input-group">
                                    <input class="form-input money-input" type="text" name="avg_down" value="-1.50" />
                                    <span class="input-group-addon">€</span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="count_per_day">Transaction count per day</label>
                            <input class="form-input" type="number" name="count_per_day" value="3">
                        </div>
                    </div>
                    <div class="card-footer">
                        <input class="btn btn-primary" type="submit" value="Generate" />
                        <a class="btn" href="/admin/transactions/{{account.id}}">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>